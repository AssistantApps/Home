<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpProtocol>
            <customHeaders>
                <add name="Content-Security-Policy"
                    value="default-src 'none'; script-src 'self'; style-src 'self' https://fonts.googleapis.com/css2; img-src 'self' data: cdn.assistantapps.com; font-src 'self' fonts.gstatic.com; manifest-src https://assistantapps.com/manifest.json; connect-src api.assistantapps.com; base-uri 'self'; report-uri 'none'; form-action 'none'; frame-ancestors 'none'; upgrade-insecure-requests;" />
                <add name="X-Content-Security-Policy"
                    value="default-src 'none'; script-src 'self'; style-src 'self' https://fonts.googleapis.com/css2; img-src 'self' data: cdn.assistantapps.com; font-src 'self' fonts.gstatic.com; manifest-src https://assistantapps.com/manifest.json; connect-src api.assistantapps.com; base-uri 'self'; report-uri 'none'; form-action 'none'; frame-ancestors 'none'; upgrade-insecure-requests;" />
                <add name="X-WebKit-CSP"
                    value="default-src 'none'; script-src 'self'; style-src 'self' https://fonts.googleapis.com/css2; img-src 'self' data: cdn.assistantapps.com; font-src 'self' fonts.gstatic.com; manifest-src https://assistantapps.com/manifest.json; connect-src api.assistantapps.com; base-uri 'self'; report-uri 'none'; form-action 'none'; frame-ancestors 'none'; upgrade-insecure-requests;" />
                <add name="Set-Cookie" value="cross-site-cookie=name; SameSite=None; Secure" />
            </customHeaders>
        </httpProtocol>
        <rewrite>
            <rules>
                {{#each redirects}}
                <rule name="RedirectTo{{pattern}}" stopProcessing="true">
                    <match url="^(.*){{pattern}}(.*)" ignoreCase="true" />
                    <action type="Redirect" url="{{{urlref url}}}" appendQueryString="false" redirectType="Permanent" />
                </rule>
                {{/each}}
            </rules>
        </rewrite>
    </system.webServer>
</configuration>