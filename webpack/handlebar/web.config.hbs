<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpProtocol>
            <customHeaders>
                <add name="Content-Security-Policy"
                    value="default-src 'self' fonts.googleapis.com; img-src 'self' cdn.assistantapps.com data:; font-src 'self' fonts.gstatic.com; connect-src api.assistantapps.com" />
                <add name="X-Content-Security-Policy"
                    value="default-src 'self' fonts.googleapis.com; img-src 'self' cdn.assistantapps.com data:; font-src 'self' fonts.gstatic.com; connect-src api.assistantapps.com" />
                <add name="X-WebKit-CSP"
                    value="default-src 'self' fonts.googleapis.com; img-src 'self' cdn.assistantapps.com data:; font-src 'self' fonts.gstatic.com; connect-src api.assistantapps.com" />
                <add name="Set-Cookie" value="cross-site-cookie=name; SameSite=None; Secure" />
            </customHeaders>
        </httpProtocol>
        <rewrite>
            <rules>
                {{#each redirects}}
                <rule name="RedirectTo{{pattern}}" stopProcessing="true">
                    <match url="^(.*){{pattern}}(.*)" ignoreCase="true" />
                    <action type="Redirect" url="{{{urlref url}}}" appendQueryString="false" redirectType="Permanent" />
                </rule>
                {{/each}}
            </rules>
        </rewrite>
    </system.webServer>
</configuration>